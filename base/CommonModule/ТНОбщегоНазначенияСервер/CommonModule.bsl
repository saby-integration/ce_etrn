			ПараметрыСтороны.Вставить("ФЛ", Новый Структура);
			ПараметрыСтороны.ФЛ.Вставить("ИНН", Сторона.ИНН);
			
		КонецЕсли;
		
		МассивСторон.Добавить(ПараметрыСтороны);
		
	КонецЦикла;
	
	Возврат МассивСторон;
	
