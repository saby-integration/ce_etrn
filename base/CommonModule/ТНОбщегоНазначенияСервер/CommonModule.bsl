		Описание = "Не выгружен документ " + СокрЛП(ОшибкиДокумента.Ключ);
		Текст    = СтрСоединить(МассивОшибок, Символы.ПС);
		
		ЗаписатьОшибкуВЖурналРегистрации(ОшибкиДокумента.Ключ, Описание, Текст);
		
	КонецЦикла;
	
