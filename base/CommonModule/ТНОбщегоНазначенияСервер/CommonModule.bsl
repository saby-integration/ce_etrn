	Массив = Новый Массив;
	Массив.Добавить(Водитель);
	
	ДанныеВодителей = ФиоИВУФизЛиц(Массив);	
			
	Структура = ДанныеВодителей.Получить(Водитель);	
	
	ВодительскоеУдостоверение = МодульКода("Saby_ТНОбщегоНазначенияКлиентСервер").ПредставлениеВУ(Структура);
