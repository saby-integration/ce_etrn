	ИсточникДанных = ИсточникДанныхКлиент();
	
	РезультатФункции = ШаблонРезультата();
	РезультатФункции.ТипТитула = НаименованиеТитула;
	
	РезультатФункции.ИмяФормы            = "ФормаДинамическихТитулов";
