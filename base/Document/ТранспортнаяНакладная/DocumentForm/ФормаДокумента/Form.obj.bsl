		ТекДанные.Роль       = ТипОтметок_Погрузка;
		
		// Этап
		Если СокрЛП(ТипОтметок_Погрузка) = "Отправитель" Тогда 
			ТекДанные.Этап = ТипТитула("Погрузка");
		Иначе
			ТекДанные.Этап = ТипТитула("ПолучениеГруза");
		КонецЕсли;
		
